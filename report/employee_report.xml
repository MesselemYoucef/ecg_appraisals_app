<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_employee_appraisal_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div>
                            <h2 style="text-align:center;">Report title</h2>
                        </div>

                        <div class="oe_structure">
                            <div class="row">

                                <table class="table table-condensed" style="border: 3px solid black !important;">
                                    <tr>
                                        <td width="40%">
                                            <p style="text-align:center;padding-top:10px;">
                                                <img t-if="not o.photo"
                                                     t-att-src="'odoo/addons/web/static/img/placeholder.png'"
                                                     height="140" border="1" width="120"/>
                                                <img t-if="o.photo"
                                                     t-att-src="'data:image/*;base64,%s' % o.photo.decode('utf-8')"
                                                     style="height:140px; width:120px;"/>
                                            </p>
                                        </td>
                                        <td width="60%">
                                            <tr>
                                                <td width="30%">
                                                    <span t-field="o.name"/>
                                                </td>
                                                <td width="30%">
                                                    <span t-field="o.name"/>
                                                </td>
                                            </tr>

                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
